#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'bundler/setup'

if ARGV.empty?
  require_relative '../lib/rcs-money'
  exit RCS::Money::Application.run!(*ARGV)
else
  require 'rcs-common/path_utils'
  require_release 'rcs-money/cli'
  RCS::Money::CLI.run
end
